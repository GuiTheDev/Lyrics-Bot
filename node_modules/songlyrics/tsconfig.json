{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"declaration": true,
		"outDir": "./build",
		"esModuleInterop": true,
		"strict": true,
		"alwaysStrict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"pretty": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
